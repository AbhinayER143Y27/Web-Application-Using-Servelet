// This is IDENTICAL to your Part C, just with a package declaration.
package com.example.studentmvc.db;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

/**
 * Database Utility Class.
 * This is the ONLY place in the application that knows the database URL,
 * username, and password. This isolates your connection details.
 */
public class DatabaseConnector {

    // --- YOU MUST CHANGE THESE (as per README.md) ---
    private static final String DB_URL = "jdbc:mysql://localhost:3306/jdbc_demo";
    private static final String USER = "your_username";
    private static final String PASS = "your_password";
    // --------------------------------------------------

    // We need to load the driver *once* when the class is loaded by the servlet container
    static {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
        } catch (ClassNotFoundException e) {
            System.err.println("FATAL: MySQL JDBC Driver not found!");
            e.printStackTrace();
        }
    }

    /**
     * Attempts to establish a connection to the database.
     * @return a Connection object
     * @throws SQLException if a database access error occurs
     */
    public static Connection getConnection() throws SQLException {
        return DriverManager.getConnection(DB_URL, USER, PASS);
    }
}
